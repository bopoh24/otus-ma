{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h",
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "CONNECT",
        "OPTIONS",
        "TRACE",
        "PATCH"
      ]
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/v1/users/me",
      "method": "GET",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/user/me",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://simple-server-app.app.svc.cluster.local"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://auth-server-keycloak.auth.svc.cluster.local/realms/app/protocol/openid-connect/certs",
          "cache": true,
          "disable_jwk_security": true,
          "operation_debug": true,
          "propagate_claims": [
            [ "sub", "x-user" ],
            [ "email", "x-email" ],
            [ "name", "x-name" ],
            [ "given_name", "x-given-name" ],
            [ "family_name", "x-family-name" ],
            [ "preferred_username", "x-preferred-username" ]
          ]
        }
      }
    },
    {
      "endpoint": "/v1/users/me",
      "method": "PATCH",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/user/me",
          "encoding": "json",
          "sd": "static",
          "method": "PATCH",
          "host": [
            "http://simple-server-app.app.svc.cluster.local"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://auth-server-keycloak.auth.svc.cluster.local/realms/app/protocol/openid-connect/certs",
          "cache": true,
          "disable_jwk_security": true,
          "operation_debug": true,
          "propagate_claims": [
            [ "sub", "x-user" ],
            [ "email", "x-email" ],
            [ "name", "x-name" ],
            [ "given_name", "x-given-name" ],
            [ "family_name", "x-family-name" ],
            [ "preferred_username", "x-preferred-username" ]
          ]
        }
      }
    },
    {
      "endpoint": "/v1/app",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/test",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://simple-server-app.app.svc.cluster.local"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
