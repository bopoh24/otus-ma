{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h",
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS",
        "PATCH"
      ]
    },
    "router": {
      "return_error_msg": true
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/api/v1/customer/profile",
      "method": "GET",
      "output_encoding": "no-op",
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/customer/profile",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://booking-srv-customer.app.svc.cluster.local"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://booking-srv-keycloak.app.svc.cluster.local/realms/customer/protocol/openid-connect/certs",
          "cache": true,
          "disable_jwk_security": true,
          "operation_debug": true,
          "propagate_claims": [
            [ "sub", "x-user" ],
            [ "email", "x-email" ],
            [ "given_name", "x-given-name" ],
            [ "family_name", "x-family-name" ]
          ]
        }
      }
    },
    {
      "endpoint": "/api/v1/customer/profile",
      "method": "PUT",
      "output_encoding": "no-op",
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/customer/profile",
          "encoding": "no-op",
          "sd": "static",
          "method": "PUT",
          "host": [
            "http://booking-srv-customer.app.svc.cluster.local"
          ],
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            }
          },
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://booking-srv-keycloak.app.svc.cluster.local/realms/customer/protocol/openid-connect/certs",
          "cache": true,
          "disable_jwk_security": true,
          "operation_debug": true,
          "propagate_claims": [
            [ "sub", "x-user" ],
            [ "email", "x-email" ],
            [ "given_name", "x-given-name" ],
            [ "family_name", "x-family-name" ]
          ]
        }
      }
    },

